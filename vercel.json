{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "rodglins.github.io/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/top-news", "dest": "/server.js" }, // Alterado para corresponder ao novo endpoint
    { "src": "/(.*)", "dest": "/rodglins.github.io/$1" }
  ]
}
